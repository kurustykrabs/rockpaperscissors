<h1>The Hall of Champions</h1>

<% @leaderboard.each do |key, value| %>

<head>
  <style>
  table, th, td, p {
    border: 1px solid black;
    border-collapse: collapse;
    text-align:center
  }
    th, td {
      padding: 7px;
    }
  </style>
    </head>
    <body>
    <table style="width:50%">

      <tr>
        <th rowspan="2">Name</th>
        <th colspan="3">Score</th>
      </tr>
      <tr>
        <th>Win</th>
        <th>Lose</th>
        <th>Tie</th>
      </tr>
      <tr>
        <td><%= key %></td>
        <td><%= value.count ('Win') %></td>
        <td><%= value.count ('Lose') %></td>
        <td><%= value.count ('Tie') %></td>
      </tr>
    </table>
    </body>

<% end %>

