<h1>The Hall of Champions</h1>




    <table style="width:50%">

      <tr>
        <th rowspan="2">Name</th>
        <th colspan="3">Score</th>
      </tr>
      <tr>
        <th>Win</th>
        <th>Lose</th>
        <th>Tie</th>
      </tr>

      <% @leaderboard.each do |key, value| %>
      <tr>
        <td><%= key %></td>
        <td><%= value.count ('Win') %></td>
        <td><%= value.count ('Lose') %></td>
        <td><%= value.count ('Tie') %></td>
      </tr>
      <% end %>
    </table>



